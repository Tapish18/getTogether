<li id="post-<%= post._id %>">
    <%= post.content %>
    <br>
    <small>
        <%= post.user.name%>
    </small>
    <br>

    
    
    <% if(locals.user){ %>
    <% if(locals.user.id == post.user.id) { %>
        <div class="detete-btn">
            <a class="delete-post-button" href="/posts/destroy/<%= post._id%>">Delete Post</a>
        </div>
    <% } %>
    
    <br>
    <div class="comment-form">
        <form action="/comment/create" method="post">
            <input type="text" name="content" placeholder="Type Your Comment Here..." required>
            <input type="hidden" name="post" value= <%= post._id%>>
            <input type="submit" value="Add Comment">
        </form>
    </div>
    <% } %>
    <br>
    <ul id="post-comments-<%= post._id %>">
        <% for(let cmt of post.comment){ %>
            <p>
                <%- include("./_comment.ejs", {post : post , cmt : cmt}) -%>
            </p>
            
        <% } %>
    </ul>
    
    

    
</li>